---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- con esto colocamos el estilo de la letra -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=VT323&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="retro-conta">
            <slot />
        </div>
    </body>
</html>
<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
        font-family: "VT323", monospace;
        font-weight: 400;
        font-style: "normal";
        --primary-color: #1b6215;
        --secondary-color: #95ff00;
        --tertiary-color: #004505;
        --background-color: #111;
        scrollbar-color: var(--primary-color) var(--secondary-color);
        font-size: clamp(18px, 3vw, 30px);
    }
    html {
        background: #13151a;
    }

    /* efecto para fondo */
    @keyframes crtAnimation {
        0% {
            background-position: 0 0;
        }
        100% {
            background-position: 0 10000%;
        }
    }
    .retro-conta {
        /* width: 100vw; */
        height: 93vh;
        /* display: grid;
        grid-template-rows: auto 1fr auto; */
        overflow: hidden;
        padding: 0.5rem;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);

        mask-image: linear-gradient(to bottom, #0005 50%, #000 50%);
        mask-size: 100% 5px;
        text-shadow: 0 0 0.3rem;

        box-shadow: inset 0px 0px 2rem;
        background-image: linear-gradient(
            0deg,
            #0000 10%,
            #fff1 90%,
            #0000 100%
        );
        animation: crtAnimation 100s linear infinite;
        background-size: 100% 80%;
    }


</style>
